<?xml version="1.0" encoding="utf-8"?>
<!--GRADIENT-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:background="@drawable/gradient">
    <!--WHITE BOX-->
    <View
            android:layout_width="325dp"
            android:layout_height="669dp"
            android:background="#ffffff"
            android:id="@+id/view2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible"/>
    <Button
            android:text="Prev Page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button5" app:layout_constraintStart_toStartOf="@+id/view2"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/view" app:layout_constraintEnd_toStartOf="@+id/button10"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            android:layout_marginEnd="60dp" android:layout_marginRight="60dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"/>
    <Button
            android:text="Open Camera"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:id="@+id/button5"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/DLUL" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/button6" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="Pick Picture"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:id="@+id/button6" app:layout_constraintEnd_toEndOf="@+id/view" android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            app:layout_constraintTop_toBottomOf="@+id/DLUL" android:layout_marginTop="12dp"/>
    <View
            android:layout_width="325dp"
            android:layout_height="669dp"
            android:background="#ffffff"
            android:id="@+id/view" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible"/>

    <!--BANNER-->
    <TextView
            android:text="Narcing Lot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/SubmitterBanner" android:typeface="normal"
            android:textSize="40sp" android:textStyle="bold" android:textAllCaps="true"
            android:textColor="@color/colorPrimary" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/view" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.496"/>

    <!-- Submitter Page Sub Banner -->
    <TextView
            android:text="Submitter Page"
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/SubmitterSubB" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/SubmitterBanner" android:textSize="20sp" android:textStyle="bold"
            android:textColor="@color/colorPrimary" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.087"/>
    <TextView
            android:text="Fitst Name:"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" android:textSize="18sp"
            android:id="@+id/fname" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/SubmitterSubB" app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <TextView
            android:text="Last Name:"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" android:textSize="18sp"
            android:id="@+id/lname" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/fname" android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="@+id/view" android:layout_marginLeft="36dp"/>
    <TextView
            android:text="Address:"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" android:textSize="18sp"
            android:id="@+id/addresssub"
            android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="@+id/view" android:layout_marginLeft="36dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/lname"/>
    <TextView
            android:text="City:"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" android:textSize="18sp"
            android:id="@+id/citysub" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/addresssub" app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <TextView
            android:text="State:"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" android:textSize="18sp"
            android:id="@+id/statesub" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/citysub" app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <TextView
            android:text="ZIP:"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" android:textSize="18sp"
            android:id="@+id/zipsub" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/statesub" app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <TextView
            android:text="D/L #:"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" android:textSize="18sp"
            android:id="@+id/dlnum" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/zipsub" app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <TextView
            android:text="D/L State:"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" android:textSize="18sp"
            android:id="@+id/dlstate" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/dlnum" app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <EditText
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/subfn"
            app:layout_constraintStart_toEndOf="@+id/fname" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/SubmitterBanner"/>
    <EditText
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/lnsub"
            app:layout_constraintTop_toBottomOf="@+id/subfn" app:layout_constraintStart_toEndOf="@+id/fname"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/addsub"
            app:layout_constraintTop_toBottomOf="@+id/lnsub"
            app:layout_constraintStart_toEndOf="@+id/fname" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/citysubenter"
            app:layout_constraintTop_toBottomOf="@+id/addsub"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/fname"/>
    <EditText
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/statesubenter"
            app:layout_constraintStart_toEndOf="@+id/fname" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/citysub"/>
    <EditText
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/zipsubenter"
            app:layout_constraintTop_toBottomOf="@+id/statesub" app:layout_constraintStart_toEndOf="@+id/fname"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/dlnumenter"
            app:layout_constraintStart_toEndOf="@+id/fname" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/zipsub"/>
    <EditText
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/dlstateenter"
            app:layout_constraintStart_toEndOf="@+id/fname" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dlnum"/>
    <TextView
            android:text="Please attach a picture of your license."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DLUL" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/dlstate" app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"/>


</android.support.constraint.ConstraintLayout>